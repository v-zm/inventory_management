<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/product_item_image"
        android:layout_width="@dimen/grid_item_image_width"
        android:layout_height="@dimen/grid_item_image_height"
        android:background="@drawable/transparent_rounded_corner_shape_grid_item"
        app:layout_constraintBottom_toTopOf="@id/product_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_broken_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/item_grid_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_item_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="@color/item_grid_text_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/product_item_name"
        app:layout_constraintTop_toBottomOf="@id/product_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>


